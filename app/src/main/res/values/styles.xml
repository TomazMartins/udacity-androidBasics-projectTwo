<resources>
    <style name="VolleyballScorerTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>

        <item name="android:buttonStyle">@style/buttonStyle</item>
    </style>


    <style name="buttonStyle" parent="android:style/Widget.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:layout_margin">@dimen/std_margin</item>
        <item name="android:padding">@dimen/std_padding</item>

        <item name="android:background">@drawable/selection_button</item>
    </style>

    <style name="tableCellTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:paddingLeft">@dimen/minimum_padding</item>
        <item name="android:paddingTop">@dimen/std_padding</item>
        <item name="android:paddingRight">@dimen/std_padding</item>
        <item name="android:paddingBottom">@dimen/maximum_padding</item>

        <item name="android:gravity">center</item>

        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="tableCell">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:paddingLeft">@dimen/std_padding</item>
        <item name="android:paddingTop">@dimen/std_padding</item>
        <item name="android:paddingRight">@dimen/std_padding</item>
        <item name="android:paddingBottom">@dimen/maximum_padding</item>

        <item name="android:gravity">center</item>

        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
</resources>
